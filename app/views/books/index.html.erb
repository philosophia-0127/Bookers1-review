<p class="success"><%= flash[:notice] %></p>

<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
  <% end %>
</table>



<h2>New book</h2>
<div class="errors">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:<br>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>

<%= form_with model: @book, local: true do |f| %><br>
  <label for="title">Title</label><br>
  <%= f.text_field :title %><br>
  <label for="body">Body</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>